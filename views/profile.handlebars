<script>
    const fetchProjectData = async () => {
        try {
            checkIsLogin()
            let response = await fetch(_base_url + '/auth/profile', {
                method: "GET",
                headers: {
                    Authorization: "Bearer " + localStorage.getItem("user-token")
                }
            })
            let data = await response.json()
            if (data.status) {
                localStorage.setItem('user-data', JSON.stringify(data?.data))
                document.getElementById('author_name').innerHTML = data?.data?.firstName + ' ' + data?.data?.lastName
                document.getElementById('author_email').innerHTML = data?.data?.email
            } else {
                alert(data.msg)
                return;
            }
        } catch (err) {
            console.log(err)
            alert(err.message)
            return;
        }
    }
    const updateCommentSection = (data) => {
        const commentSec = document.getElementById("commentSec");
        commentSec.innerHTML = "";

        data.forEach(item => {
            const commentDiv = document.createElement("div");
            commentDiv.classList.add("mb-1");
            commentDiv.innerHTML = `
                <p class="mb-0"><strong>${item.title}</strong> - ${item.description} : ${new Date(item.datePosted)}</p>
                <p class="mb-3">Likes: <strong>${item.likesCount}</strong> | Dislike: <strong>${item.dislikeCount}</strong></p>
            `;
            commentSec.appendChild(commentDiv);
        });
    };

    const updateStatSection = (data) => {
        const commentSec = document.getElementById("commentSec");
        commentSec.innerHTML = "";

        data.forEach(item => {
            const commentDiv = document.createElement("div");
            commentDiv.classList.add("mb-1");
            commentDiv.innerHTML = `
                <p class="mb-1">${item}</p>
            `;
            commentSec.appendChild(commentDiv);
        });
    };

    const videoBtn = document.getElementById("videoBtn");
    const likeBtn = document.getElementById("likeBtn");
    const statBtn = document.getElementById("statBtn");

    videoBtn.addEventListener("click", () => {
        updateCommentSection(JSON.parse(localStorage.getItem('user-data')).top3Latest);
    });

    likeBtn.addEventListener("click", () => {
        updateCommentSection(JSON.parse(localStorage.getItem('user-data')).top3Liked);
    });

    statBtn.addEventListener("click", () => {
        const states = JSON.parse(localStorage.getItem('user-data')).states;
        updateStatSection([
            `Total Videos: <strong>${states.totalVideos}</strong>`,
            `Total Liked: <strong>${states.totalLiked}</strong>`,
            `Total Disliked: <strong>${states.totalDisLiked}</strong>`
        ]);
    });

    document.addEventListener("DOMContentLoaded", () => {
        fetchProjectData()
        let data = JSON.parse(localStorage.getItem('user-data'))
        updateCommentSection(data.top3Latest)
    });
</script>
<div class="container">
    {{> navbar}}
</div>
<div class="container">
    <div class="container d-flex p-5 border justify-content-around">
        <div class="d-flex flex-column border rounded align-items-center justify-content-center">
            <video class="video-upload-sec p-3" id="project_video" controls></video>
        </div>

        <div class="w-75 p-3">
            <div class="row align-items-top">
                <div class="col-auto">
                    <img class="avatar" src="/image/avatar2.png" alt="Avatar">
                </div>
                <div class="col px-0">
                    <h4 class="mb-0" id="author_name"></h4>
                    <p id="project_description">Description</p>
                </div>

            </div>
            <div>

                <div class="d-flex flex-column justify-content-between border rounded  project-comment-sec mt-2">
                    <h4 for="report" class="p-3"> Report Project </h4>
                    <select name="report" class="form-control comment-sec" id="report" multiple>
                        <option value="i just dont like it">i just dont like it </option>
                        <option value="its spam">its spam</option>
                        <option value="sexual activity">sexual activity</option>
                        <option value="scam">scam</option>
                        <option value="drugs">drugs</option>
                    </select>

                    <div class="d-flex justify-content-center m-3">
                        <button type="button" class="btn btn-danger" id="add_report">Submit</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script>
    const fetchProjectData = async () => {
        try {
            checkIsLogin()
            let response = await fetch(_base_url + '/project/' + localStorage.getItem('project-id'), {
                method: "GET",
                headers: {
                    Authorization: "Bearer " + localStorage.getItem("user-token")
                }
            })
            let data = await response.json()
            if (data.status) {
                document.getElementById("project_description").innerHTML = data.data.title + ' - ' + data.data.description;
                document.getElementById("author_name").innerHTML = data.data.author.firstName + ' ' + data.data.author.lastName;
                document.getElementById("project_video").setAttribute('src', data.data.videoLink);

            } else {
                alert(data.msg)
                return;
            }
        } catch (err) {
            console.log(err)
            alert(err.message)
            return;
        }
    }

    const addProjectReport = async (e) => {
        e.preventDefault()
        try {
            checkIsLogin()
            let selectedOptions = [];
            let selectElement = document.getElementById("report");

            for (let option of selectElement.selectedOptions) {
                selectedOptions.push(option.value);
            }
            console.log('reasons', selectedOptions)
            let form = new FormData()
            form.append("reasonSelections", selectedOptions)
            form.append('projectId', localStorage.getItem('project-id'))
            let response = await fetch(_base_url + '/report', {
                method: "POST",
                body: form,
                headers: {
                    Authorization: "Bearer " + localStorage.getItem("user-token")
                }
            })
            let data = await response.json()

            if (data && data.status) {
                showAlert(data.msg, 'success');
                setTimeout(() => {
                    window.location.href = '/dashboard';
                }, 2000);
            } else {
                showAlert(data.msg, 'error');
            }
        } catch (err) {
            console.log("error", err);
            showAlert(error.message, 'error');
            return;
        }
    }

    document.getElementById('add_report').addEventListener('click', (e) => addProjectReport(e))

    fetchProjectData()
</script>
<div class="container">
    {{> navbar}}
</div>
<div class="container">
    <div class="container d-flex p-5 border justify-content-around">
        <div class="d-flex flex-column border rounded align-items-center justify-content-center">
            <video class="video-upload-sec p-3" id="project_video" controls></video>
        </div>

        <div class="w-75 p-3">
            <div class="row align-items-top">
                <div class="col-auto">
                    <img class="avatar" src="/image/avatar2.png" alt="Avatar">
                </div>
                <div class="col px-0">
                    <h4 class="mb-0" id="author_name"></h4>
                    <p id="project_description">Description</p>
                </div>

            </div>
            <div>

                <div class="d-flex flex-column justify-content-between border rounded  project-comment-sec mt-2">
                    <h4 for="report" class="p-3"> Report Project </h4>
                    <select name="report" class="form-control comment-sec" id="report" multiple>
                        <option value="i just dont like it">i just dont like it </option>
                        <option value="its spam">its spam</option>
                        <option value="sexual activity">sexual activity</option>
                        <option value="scam">scam</option>
                        <option value="drugs">drugs</option>
                    </select>

                    <div class="d-flex justify-content-center m-3">
                        <button type="button" class="btn btn-danger" id="add_report">Submit</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

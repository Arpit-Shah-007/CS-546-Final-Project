            </div>
        </nav>
    </div>

    <div class="container mt-5">
        <div class="overflow-x-auto">
            <table class="table">
                <!-- head -->
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Reason</th>
                        <th>For Project</th>
                        <th>Delete Project</th>
                        <th>Delete Report</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="reportTableBody">
                    <!-- row 1 -->
                    {{#each reports}}
                    <tr>
                        <td>
                            <div class="flex items-center gap-2">
                                <div class="avatar">
                                    <div class="mask mask-squircle w-12 h-12">
                                        <img src="{{this.reportedBy.profilePic}}" alt="Avatar Tailwind CSS Component" />
                                    </div>
                                </div>
                                <div>
                                    <div class="font-bold">{{this.reportedBy.firstName}} {{this.reportedBy.lastName}}</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="font-bold">{{this.reasonSelections}}</div>
                        </td>
                        <td>
                            Report for project <a class="underline" href="/project/{{this.projectId}}">Click</a>
                        </td>
                        <td>
                            <a href="#">
                                <button class="btn btn-ghost btn-xs" id="projectDeleteButton" data-project-id="{{this.projectId}}">
                                <?xml version="1.0" ?><svg id="projectDeleteIcon" width="30" height="30" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><defs>

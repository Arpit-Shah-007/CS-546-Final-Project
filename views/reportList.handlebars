                                    ,0Z"/></svg>
                            </button>
                        </th>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function navigate(route) {
                window.location.href = route;
            }

        function logOut() {
            // Implement logout logic
        }

        // Add event listener to report delete button
        document.querySelectorAll('#reportDeleteButton').forEach(button => {
            button.addEventListener('click', function() {
                const reportId = this.getAttribute('data-report-id');
                deleteReport(reportId);
            });
        });

        document.querySelectorAll('#projectDeleteButton').forEach(button => {
            button.addEventListener('click', function() {
                const projectId = this.getAttribute('data-project-id');
                deleteProject(projectId);
            });
        });

        function deleteProject(projectId) {
            // Send delete request for the project
            fetch(`http://localhost:3000/project/${projectId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                    // Add any other headers if needed
                },
                // Add any body data if needed
            })
            .then(response => {
                if (response.ok) {
                    // Show success alert
                    alert('Project deleted successfully');
                    // Reload the page
                    location.reload();
                } else {
                    // Show error alert
                    alert('Failed to delete project');
                }
            })
            .catch(error => {
                // Show error alert
                alert('Error:', error);
            });
        }

        function deleteReport(reportId) {
            // Send delete request for the report
            fetch(`http://localhost:3000/report/${reportId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                    // Add any other headers if needed
                },
                // Add any body data if needed
            })
            .then(response => {
                if (response.ok) {
                    // Show success alert
                    alert('Report deleted successfully');
                    // Reload the page
                    location.reload();
                } else {
                    // Show error alert
                    alert('Failed to delete report');
                }
            })
            .catch(error => {
                // Show error alert
                alert('Error:', error);
            });
}

    </script>
</body>

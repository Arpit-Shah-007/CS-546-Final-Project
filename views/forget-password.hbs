<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forget Password </title>

    <!-- style CSS -->
    <link rel="stylesheet" href="css/styles.css">

    <!-- Boxicons CSS -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

</head>

<body>
    <section class="container-auth forms">
        <div class="form login">
            <div class="form-content">
                <header>Forget Password</header>
                <form class="auth-form" id="forget_form" method="post">
                    <div class="field input-field">
                        <input type="email" placeholder="Email" class="input" id="email">
                    </div>

                    <div class="form-link">
                        <a href="/login" class="forgot-pass">Log In</a>
                    </div>

                    <div class="field button-field">
                        <button type="submit">Request</button>
                    </div>
                </form>

                <!-- <div class="form-link">
                    <span>Don't have an account? <a href="#" class="link signup-link">Signup</a></span>
                </div> -->
            </div>
            <div id="snackbar"></div>
    </section>
    <script src="/js/index.js"></script>
    <script>

        const forgetHandle = async (e) => {
            e.preventDefault()
            let email = document.getElementById("email").value


            let form = new FormData()

            form.append("email", email)
            try {

                let request = await fetch(_base_url + '/auth/forgot-password', {
                    method: "POST",
                    body: form,
                    headers: {

                    }
                })
                let data = await request.json()
                if (data && data.status) {
                    localStorage.setItem("reset-token", data.token)
                    showAlert(data.msg, 'success')
                    setTimeout(() => {
                        window.location.href = '/reset-password'
                    }, 2000)
                } else {
                    showAlert(data.msg, 'error')
                }
            } catch (error) {
                //console.log("login", error)
                showAlert(error.message, 'error')
                return
            }
        }
        document.querySelector("#forget_form").addEventListener("submit", forgetHandle);
    </script>
</body>

</html>
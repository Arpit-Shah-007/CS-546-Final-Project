<main class="container mt-5">
  <h1 class="mt-5 mb-4">Login</h1>
  <form id="signin-form" action="/auth/login" method="POST">
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input type="email" id="email" name="email" class="form-control" placeholder="username@stevens.edu">
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password"
        aria-describedby="passwordHelpBlock">
      <div id="passwordHelpBlock" class="form-text">
        Your password must be 8 characters long, should contain uppercase letter, digit and a special
        character(@$!%*?&), and must not contain spaces or emoji.
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <div id="client-side-error-div" hidden></div>
  </form>
  {{#if hasErrors}}
  <div class="alert alert-danger mt-3 error" role="alert">
    {{error}}
  </div>
  {{/if}}
  {{!-- <p class="mt-3">Forgot your password? <a href="/reset-password">Reset it here</a></p> --}}
  <p class="mt-3">Don't have an account yet? <a href="/auth/register">Click here to register!</a></p>
</main>